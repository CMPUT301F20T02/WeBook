<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowBookDetail">

    <ImageView
        android:id="@+id/user_icon_detail"
        android:layout_width="150dp"
        android:layout_height="266dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/book_icon" />

    <TextView
        android:id="@+id/detail_UserName"
        android:layout_width="216dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/detail_UserType"
        app:layout_constraintStart_toEndOf="@+id/user_icon_detail"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detail_UserType"
        android:layout_width="214dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/detail_Phone"
        app:layout_constraintStart_toEndOf="@+id/user_icon_detail"
        app:layout_constraintTop_toBottomOf="@+id/detail_UserName" />

    <TextView
        android:id="@+id/detail_Phone"
        android:layout_width="214dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/detailed_UserEmail"
        app:layout_constraintStart_toEndOf="@+id/user_icon_detail"
        app:layout_constraintTop_toBottomOf="@+id/detail_UserType" />

    <TextView
        android:id="@+id/detailed_UserEmail"
        android:layout_width="213dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/detailed_borrower"
        app:layout_constraintStart_toEndOf="@+id/user_icon_detail"
        app:layout_constraintTop_toBottomOf="@+id/detail_Phone" />

    <TextView
        android:id="@+id/detailed_borrower"
        android:layout_width="212dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/user_icon_detail"
        app:layout_constraintTop_toBottomOf="@+id/detailed_UserEmail" />

    <TextView
        android:id="@+id/detail_UserDescription"
        android:layout_width="387dp"
        android:layout_height="166dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="92dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailed_borrower" />

    <TextView
        android:id="@+id/detailed_status"
        android:layout_width="211dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/user_icon_detail"
        app:layout_constraintTop_toBottomOf="@+id/detailed_borrower" />

</androidx.constraintlayout.widget.ConstraintLayout>