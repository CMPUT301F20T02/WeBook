<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowBookDetail">

    <ImageView
        android:id="@+id/book_icon_detail"
        android:layout_width="157dp"
        android:layout_height="210dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/empty_user_icon" />

    <TextView
        android:id="@+id/detail_username"
        android:layout_width="223dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/detail_userType"
        app:layout_constraintStart_toEndOf="@+id/book_icon_detail"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detail_userType"
        android:layout_width="222dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/detail_phone"
        app:layout_constraintStart_toEndOf="@+id/book_icon_detail"
        app:layout_constraintTop_toBottomOf="@+id/detail_username" />

    <TextView
        android:id="@+id/detail_phone"
        android:layout_width="224dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/detailed_email"
        app:layout_constraintStart_toEndOf="@+id/book_icon_detail"
        app:layout_constraintTop_toBottomOf="@+id/detail_userType" />

    <TextView
        android:id="@+id/detailed_email"
        android:layout_width="226dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/book_icon_detail"
        app:layout_constraintTop_toBottomOf="@+id/detail_phone" />

    <TextView
        android:id="@+id/detail_userDescription"
        android:layout_width="387dp"
        android:layout_height="166dp"
        android:layout_marginTop="64dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailed_email" />

</androidx.constraintlayout.widget.ConstraintLayout>