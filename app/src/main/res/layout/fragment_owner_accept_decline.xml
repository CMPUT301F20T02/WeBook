<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OwnerAcceptDeclineFragment">

    <TextView
        android:id="@+id/book_request_title_text"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_marginEnd="409dp"
        android:layout_marginRight="409dp"
        android:layout_marginBottom="38dp"
        android:text="TITLE"
        app:layout_constraintBottom_toTopOf="@+id/book_request_author_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/book_request_author_text"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="384dp"
        android:layout_marginRight="384dp"
        android:layout_marginBottom="30dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/book_request_owner_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_request_title_text" />

    <TextView
        android:id="@+id/book_request_owner_text"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="384dp"
        android:layout_marginRight="384dp"
        android:layout_marginBottom="30dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/book_request_requestee_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_request_author_text" />

    <TextView
        android:id="@+id/book_request_requestee_text"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="386dp"
        android:layout_marginRight="386dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_request_owner_text" />

    <Button
        android:id="@+id/book_request_decline_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="156dp"
        android:background="@android:color/holo_red_dark"
        android:text="@string/DECLINE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/book_request_accept_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/book_request_accept_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="156dp"
        android:background="#4CAF50"
        android:shadowColor="#FFFFFF"
        android:text="@string/ACCEPT"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/book_request_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="51dp"
        android:layout_marginRight="51dp"
        android:layout_marginBottom="156dp"
        android:text="@string/CANCEL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/book_request_accept_button" />
</androidx.constraintlayout.widget.ConstraintLayout>